<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.purchase.mapper.BizCdkOrderItemMapper">
    
    <resultMap type="BizCdkOrderItem" id="BizCdkOrderItemResult">
        <result property="itemId"    column="item_id"    />
        <result property="orderId"    column="order_id"    />
        <result property="stockId"    column="stock_id"    />
        <result property="cdkCode"    column="cdk_code"    />
        <result property="deliveryStatus"    column="delivery_status"    />
        <result property="deliveryTime"    column="delivery_time"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectBizCdkOrderItemVo">
        select item_id, order_id, stock_id, cdk_code, delivery_status, delivery_time, create_time from biz_cdk_order_item
    </sql>

    <select id="selectBizCdkOrderItemList" parameterType="BizCdkOrderItem" resultMap="BizCdkOrderItemResult">
        <include refid="selectBizCdkOrderItemVo"/>
        <where>  
            <if test="orderId != null "> and order_id = #{orderId}</if>
            <if test="stockId != null "> and stock_id = #{stockId}</if>
            <if test="cdkCode != null  and cdkCode != ''"> and cdk_code = #{cdkCode}</if>
            <if test="deliveryStatus != null  and deliveryStatus != ''"> and delivery_status = #{deliveryStatus}</if>
            <if test="deliveryTime != null "> and delivery_time = #{deliveryTime}</if>
        </where>
    </select>
    
    <select id="selectBizCdkOrderItemByItemId" parameterType="Long" resultMap="BizCdkOrderItemResult">
        <include refid="selectBizCdkOrderItemVo"/>
        where item_id = #{itemId}
    </select>

    <insert id="insertBizCdkOrderItem" parameterType="BizCdkOrderItem" useGeneratedKeys="true" keyProperty="itemId">
        insert into biz_cdk_order_item
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null">order_id,</if>
            <if test="stockId != null">stock_id,</if>
            <if test="cdkCode != null and cdkCode != ''">cdk_code,</if>
            <if test="deliveryStatus != null">delivery_status,</if>
            <if test="deliveryTime != null">delivery_time,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null">#{orderId},</if>
            <if test="stockId != null">#{stockId},</if>
            <if test="cdkCode != null and cdkCode != ''">#{cdkCode},</if>
            <if test="deliveryStatus != null">#{deliveryStatus},</if>
            <if test="deliveryTime != null">#{deliveryTime},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateBizCdkOrderItem" parameterType="BizCdkOrderItem">
        update biz_cdk_order_item
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="stockId != null">stock_id = #{stockId},</if>
            <if test="cdkCode != null and cdkCode != ''">cdk_code = #{cdkCode},</if>
            <if test="deliveryStatus != null">delivery_status = #{deliveryStatus},</if>
            <if test="deliveryTime != null">delivery_time = #{deliveryTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where item_id = #{itemId}
    </update>

    <delete id="deleteBizCdkOrderItemByItemId" parameterType="Long">
        delete from biz_cdk_order_item where item_id = #{itemId}
    </delete>

    <delete id="deleteBizCdkOrderItemByItemIds" parameterType="String">
        delete from biz_cdk_order_item where item_id in 
        <foreach item="itemId" collection="array" open="(" separator="," close=")">
            #{itemId}
        </foreach>
    </delete>
</mapper>