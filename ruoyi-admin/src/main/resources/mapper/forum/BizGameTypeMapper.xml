<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.forum.mapper.BizGameTypeMapper">

    <resultMap type="BizGameType" id="BizGameTypeResult">
        <id property="typeId" column="type_id"/>
        <result property="typeName" column="type_name"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectBizGameTypeVo">
        select type_id, type_name, create_by, create_time, update_by, update_time, remark
        from biz_game_type
    </sql>

    <select id="selectBizGameTypeList" parameterType="BizGameType" resultMap="BizGameTypeResult">
        <include refid="selectBizGameTypeVo"/>
        <where>
            <if test="typeName != null and typeName != ''">
                AND type_name like concat('%', #{typeName}, '%')
            </if>
        </where>
    </select>

    <select id="selectBizGameTypeByTypeId" parameterType="Integer" resultMap="BizGameTypeResult">
        <include refid="selectBizGameTypeVo"/>
        where type_id = #{typeId}
    </select>

    <insert id="insertBizGameType" parameterType="BizGameType">
        insert into biz_game_type
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="typeId != null">type_id,</if>
            <if test="typeName != null and typeName != ''">type_name,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null and updateBy != ''">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null and remark != ''">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="typeId != null">#{typeId},</if>
            <if test="typeName != null and typeName != ''">#{typeName},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null and updateBy != ''">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null and remark != ''">#{remark},</if>
        </trim>
    </insert>

    <update id="updateBizGameType" parameterType="BizGameType">
        update biz_game_type
        <trim prefix="SET" suffixOverrides=",">
            <if test="typeName != null and typeName != ''">type_name = #{typeName},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null and remark != ''">remark = #{remark},</if>
        </trim>
        where type_id = #{typeId}
    </update>

    <delete id="deleteBizGameTypeByTypeId" parameterType="Integer">
        delete from biz_game_type where type_id = #{typeId}
    </delete>

    <delete id="deleteBizGameTypeByTypeIds" parameterType="String">
        delete from biz_game_type where type_id in
        <foreach item="typeId" collection="array" open="(" separator="," close=")">
            #{typeId}
        </foreach>
    </delete>

</mapper>